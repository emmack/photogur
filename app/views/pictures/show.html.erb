<h1> Picture </h1>

<%= link_to "Back to Pictures", pictures_url %> | <%= link_to "Edit", edit_picture_path(@picture) %> | 
<%= link_to "Delete", @picture, :confirm => "Are you sure you want to delete this picture?", :method => :delete %>

<p> <%= @picture.title %>, <%=@picture.artist %></p>
<% unless @picture.url.blank? %>
	<img src= "<%= @picture.url %>"> 
<% end %>
<% unless @picture.image.blank? %>
	<img src= "<%= @picture.image.url %>"> 
<% end %>




<%= form_for @comment do |f| %>
	<%= f.hidden_field :picture_id %>
	<p><%= f.label "comments" %><br><%= f.text_field "comments"%></p>
	<p><%= submit_tag "Save" %></p>

	
<%end%>
<h2> Comments </h2>
 <%=@picture.comments.each do |picture|%>

	<p><%= picture[:comments]%></p>
	<%end%>

